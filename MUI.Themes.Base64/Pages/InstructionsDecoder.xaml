<UserControl x:Class="MUI.Themes.Base64.Pages.InstructionsDecoder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <mui:BBCodeBlock BBCode="First, type (for patient ones) or paste the Base64 string. You can also browse for a file containing it or that you saved with the encoder. After, press the 'Save as...' button and choose where to save. The rest is all automatic. You will a little text under 'Result' that will confirm you the save location and it's success. A preview will also give you the result of the decoding." />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>