<UserControl x:Class="MUI.Themes.Base64.Pages.InstructionsEncoder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <mui:BBCodeBlock BBCode="You only have to choose a file with the 'Browse...' button, the rest is all automatic. The result will appear in the box under and will by the way, confirm the success. The big ones will make crash this program when you will try to select them. So you can use the 'Save as..' button to save the Base64 string to a .txt file." />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
